pipeline {
    agent any

    tools {
        maven 'maven'
    }
    stage ("clean up")  {
               step{
                   deleteDir()
            }
        }
        stage('clone repo') {
            steps {
                sh "git clone https://github.com/nadagharbiiiiii/ex1spring.git"

            }
        }
        stage('Generate backend image') {
            steps {
                Dir("exp1.spring"){
                    sh "mvn clean install"
                    sh "docker build -t docexp1.spring ."
            }
        }
        stage("Run docker compose") {
            steps {
                dir("exp1_spring"){
                   sh "docker compse up _d
                }
             }
        }
    }
}
